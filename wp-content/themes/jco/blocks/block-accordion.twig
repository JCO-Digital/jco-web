<section id="block-{{ block.id }}" class="block {{ block.className }} min-h-[20rem] flex items-center justify-center">
    <div x-data="{ active: 1 }" class="w-full min-h-[16rem] border-t border-lilly/25">
        {% for item in fields.accordion %}
        <div x-data="{
            id: {{ loop.index }},
            get isActive() {
                return this.active === this.id
            },
            set isActive(value) {
                this.active = value ? this.id : null
            }}"
            role="region" class="border-b border-lilly/25">
            <h2>
                <button x-on:click="isActive = !isActive"
                        class="flex w-full items-center justify-between py-6 text-3xl">
                    <span class="max-w-[75%] md:max-w[80%] text-left">{{ item.item_title }}</span>
                    <span x-show="isActive" aria-hidden="true" class="flex items-center justify-center ml-4 bg-brand w-16 h-16 rounded-full">âˆ’</span>
                    <span x-show="!isActive" aria-hidden="true" class="flex items-center justify-center ml-4 bg-brand w-16 h-16 rounded-full" style="display: none;">+</span>
                </button>
            </h2>

            <div x-show="isActive" x-collapse style="height: auto;">
                <div class="pb-4 text-2xl md:max-w-[80%]">{{ item.item_text }}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</section>